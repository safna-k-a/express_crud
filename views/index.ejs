<%-include('header')-%>
<div class="container">
    <div class="sec row justify-content-center mt-3">
        <div class="col-6 ms-2">
            <div class="login">
                <% if (message) { %>
                <div class="alert alert-<%= type %>" id="alert-msg">
                    <%= message.message %>
                </div>
                <% } %>

                <form action="/login" method="POST">
                    <h2>Login</h2>
                    <div class="form-group">
                        <label for="email">Email address</label>
                        <input
                            type="email"
                            class="form-control"
                            id="email"
                            placeholder="Enter email"
                            name="email"
                            required
                        />
                    </div>
                    <div class="form-group">
                        <label for="password">Password</label>
                        <input
                            type="password"
                            class="form-control"
                            id="password"
                            placeholder="Password"
                            name="password"
                            required
                        />
                    </div>
                    <button type="submit" class="btn mt-3">Login</button>
                    <div class="mt-3">
                        <span>Not a member? </span
                        ><a href="/signup">Signup now</a>
                    </div>
                </form>
            </div>
        </div>
        <div class="col-5">
            <img src="/images/3094352.jpg" class="login_image" />
        </div>
    </div>
</div>

<%-include('footer')-%>
